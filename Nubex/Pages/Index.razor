@page "/"

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="ntext navbar-brand " href="">Nubex Admin</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class=" @NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/allproducts">
                    <span class="oi oi-list" aria-hidden="true"></span> All Products User
                </NavLink>
            </div>


            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Category">
                    <span class="oi oi-list" aria-hidden="true"></span> Category
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Product">
                    <span class="oi oi-list" aria-hidden="true"></span> Products
                </NavLink> 
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/identity/account/logout">
                    <span class="oi oi-account-logout" aria-hidden="true"></span> Log Out
                </NavLink>
            </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/identity/account/login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Log In
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/orderdetail">
                        <span class="oi oi-list" aria-hidden="true"></span> Order Detail User
                    </NavLink>
                </div>

    
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string roleAdmin = SD.Role_Admin;
    private string roleAcount = SD.Role_Account;
    private string roleCara = SD.Role_Cara;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
@page "/"